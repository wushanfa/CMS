<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </FrameLayout>

    <Button
        android:id="@+id/btn_one"
        style="@style/btn_corner"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_two"
        style="@style/btn_corner"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_three"
        style="@style/btn_corner"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btn_four"
        style="@style/btn_corner"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <RadioGroup
        android:id="@+id/rgp_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/btn_four"
        android:layout_toRightOf="@id/btn_three"
        android:background="@color/transparent_gray"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            style="@style/rbtn_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RadioButton
            style="@style/rbtn_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RadioButton
            style="@style/rbtn_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RadioGroup>

    <ListView
        android:id="@+id/lv_right"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:layout_above="@id/btn_four"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_two"
        android:divider="@null"
        android:cacheColorHint="@color/transparent"
        android:scrollbars="none"
        android:visibility="gone" >
    </ListView>

</RelativeLayout>