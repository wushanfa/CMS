<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@drawable/frame_red"
        android:padding="10dp">
<TextView
        android:id="@+id/tv_medicineexecption_tile"
        android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:text="理由："
          android:textSize="24sp"
          android:textColor="@color/black"
        android:gravity="center_vertical"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
        />
    <Button
            android:id="@+id/btn_choosereason"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_medicineexecption_tile"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_mainsign_bg"
            android:text="点击选择原因"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>
    <TextView
            android:id="@+id/tv_medicineexecption_total"
            android:layout_width="wrap_content" android:layout_height="50dp"
            android:text="已输总量c.c"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_below="@+id/tv_medicineexecption_tile"
            />
    <EditText
            android:id="@+id/et_total"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_medicineexecption_total"
            android:layout_alignRight="@+id/btn_choosereason"
            android:layout_below="@+id/btn_choosereason"
            android:phoneNumber="true"
            android:layout_marginTop="10dp"
            />
    <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            style="@style/btn_blue"
            android:text="确认"
            android:layout_marginTop="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_alignRight="@+id/et_total"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/et_total"
            />

</RelativeLayout>