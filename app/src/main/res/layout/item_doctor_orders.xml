<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_patrol_time1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line3"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tv_start_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="05-03 08:45"
            android:textColor="@color/grey_text_content"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_pj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_right_bottom_left_padding"
            android:layout_toRightOf="@+id/tv_start_time1"
            android:text="膝部疼痛缓解"
            android:maxLines="2"
            android:textColor="@color/grey_text_content"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_nurser_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/top_right_bottom_left_padding"
            android:text="武文娟"
            android:textColor="@color/grey_text_content"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line4"
        android:layout_width="1dp"
        android:layout_height="38dp"
        android:layout_below="@+id/rl_patrol_time1"
        android:background="@color/org_blue_background" />

</RelativeLayout>