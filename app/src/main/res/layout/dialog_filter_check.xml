<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/top_right_bottom_left_padding">

    <RadioGroup
        android:id="@+id/rg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_time_all"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="@color/black_text_title"></RadioButton>

        <RadioButton
            android:id="@+id/rb_today"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textColor="@color/black_text_title"></RadioButton>

        <RadioButton
            android:id="@+id/rb_tomorry"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="明天"
            android:textColor="@color/black_text_title"></RadioButton>

        <RadioButton
            android:id="@+id/rb_yestady"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="昨天"
            android:textColor="@color/black_text_title"></RadioButton>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_status_all"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="@color/black_text_title"></RadioButton>

        <RadioButton
            android:id="@+id/rb_havachecked"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="已核对"
            android:textColor="@color/black_text_title"></RadioButton>

        <RadioButton
            android:id="@+id/rb_notchecked"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="未核对"
            android:textColor="@color/black_text_title"></RadioButton>
        <RadioButton
            android:id="@+id/rb_cancel"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/black_text_title"></RadioButton>
    </RadioGroup>




</LinearLayout>