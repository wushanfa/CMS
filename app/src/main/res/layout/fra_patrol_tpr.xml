<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_fra_patrol_tpr"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_medicine_detail"
        android:layout_width="fill_parent"
        android:layout_height="354dp"
        android:layout_below="@+id/intravenous_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_black"
        android:orientation="vertical"
        android:padding="10dp">
        <!-- tpr -->
        <LinearLayout
            android:id="@+id/ll_tpr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <!-- 体温 -->

            <LinearLayout
                android:id="@+id/ll_tiwen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="TPR:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_fyh_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="体温 :"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tv_item_fyh_type_"
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="输入体温"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <requestFocus />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:paddingTop="3dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_fyh_shop_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=" ℃"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_war_tw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="患者体温异常"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>


            <!-- 心跳 -->

            <LinearLayout
                android:id="@+id/ll_xintiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_tiwen"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_fyh_shop_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="脉搏 :"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tv_item_fyh_type_2"
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="输入脉搏"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:paddingTop="3dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_fyh_shop_unit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="次/分"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_war_mb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="患者脉搏异常"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:visibility="invisible" />

            </LinearLayout>


            <!-- 呼吸 -->

            <LinearLayout
                android:id="@+id/ll_huxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_xintiao"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_fyh_shop_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="呼吸 :"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tv_item_fyh_type_3"
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:digits="1234567890."
                        android:gravity="center"
                        android:hint="呼吸次数"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"
                        android:paddingTop="3dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_fyh_shop_unit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="次/分"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_war_hx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="患者体温异常"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_medicine_detail"
        android:background="@color/grey_background"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_tras_submit"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/select_button_blue"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>