<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_fra_icu_hlljh"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <!-- ScrollView只需一个子类布局 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@color/blue_normal"
                android:gravity="center"
                android:text="常     规"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/changgui_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_jb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="护 理 级 别:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_level"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_jb"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_xdjh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="心 电 监 护:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_guardianship"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_xdjh"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_kqhl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="口 腔 护 理:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_oral_nursing"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_kqhl"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_rchl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="褥 疮 护 理:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_decubitus"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_rchl"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_nghl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="尿 管 护 理:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_catheter"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_nghl"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_fskb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="翻 身 叩 背:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_beatRear"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_fskb"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_ll"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="点击折叠详细内容"
                    android:textColor="@color/grey_800"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/up" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@color/blue_normal"
                android:gravity="center"
                android:text="特      殊"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/teshu_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_xy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="吸           氧:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_oxygen"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_xy"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tv_jb_yl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="氧    流   量:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/tv_jb_yl_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@+id/tv_jb_yl"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_yll"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@null"
                            android:inputType="number" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/threetestline" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:text="次/分"
                        android:textColor="@color/grey_700"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_cvp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="CVP 测   定:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_cvp_measuring"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_cvp"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_yswhxr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="压  缩  雾  化  吸  入:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_inhale"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/tv_yswhxr"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/bg_spinner_other_long"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#7cd3ea"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="饮           食"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_ys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="饮            食:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_eat"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_ys"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#7cd3ea"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="预           防"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_yf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="预            防:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_prevention"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_yf"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#7cd3ea"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="治           疗"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_gndl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="功 能 锻 炼:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_exercise"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_gndl"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_ztcy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="中 途 擦 药:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_applicator"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_ztcy"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_xwtf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="穴 位 贴 敷:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_acupuncture_point"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_xwtf"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_qyzl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="气 压 治 疗:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_pressure"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_qyzl"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_ll_teshu"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/detail_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="点击折叠详细内容"
                    android:textColor="@color/grey_800"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_iv2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/up" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@null" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_100_trans"
        android:baselineAligned="false">


        <TextView
            android:id="@+id/page_time_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:text="记录时间："
            android:textColor="@color/grey_600"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/page_time"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/page_time_message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:background="@drawable/skin_line_gray_sround"
            android:gravity="center" />

        <RelativeLayout
            android:id="@+id/save_ll"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/save_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/select_icu_save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/save_img"
                android:layout_centerHorizontal="true"
                android:text="保存"
                android:textSize="12sp" />

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/select_choosen_order_btn_concer_zero" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>