<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cb_check"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/skin_line_gray"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/top_right_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/checkmark"/>

                <TextView
                    android:id="@+id/tv_content_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/performed"
                    android:textColor="@color/grey_700"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/order_context"
                android:textColor="@color/black_text_content"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_property"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="2dp"
            android:paddingTop="10dp"
            android:visibility="visible">
            <!--长临-->
            <LinearLayout
                android:id="@+id/ll_repeat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_repeat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="@string/long_or_short"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_repeat_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/long_time"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>
            </LinearLayout>
            <!--speed-->
            <LinearLayout
                android:id="@+id/ll_speed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="@string/di_su"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_speed_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="40"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>
            </LinearLayout>
            <!--dosage-->
            <LinearLayout
                android:id="@+id/ll_dosage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_dosage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="@string/how_many"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_dosage_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="250ml"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>
            </LinearLayout>
            <!--frequency-->
            <LinearLayout
                android:id="@+id/ll_frequency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_frequency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="@string/pin_ci"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_frequency_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Bid"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>
            </LinearLayout>
            <!--皮试-->
            <LinearLayout
                android:id="@+id/ll_piShi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_pishi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="@string/pi_shi"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_pishi_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/yin_xing"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>
            </LinearLayout>
            <!--administration-->
            <LinearLayout
                android:id="@+id/ll_administration"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_用法"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="@string/how_to_use"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_administration_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/use_by_water"
                    android:textColor="@color/black_text_content"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_relation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_tv_image"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/select_order_comment"/>

            <TextView
                android:id="@+id/comment_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/comment_tv_image"
                android:text="评价"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/pingjia"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:focusable="false"/>
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/grey_300"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/execpteion_tv_image"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/select_order_exeception"/>

            <TextView
                android:id="@+id/exeception_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/execpteion_tv_image"
                android:text="异常"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/yichang"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:focusable="false"/>
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/grey_300"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/endtime_tv_image"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/select_order_endtime"/>

            <TextView
                android:id="@+id/endtime_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/endtime_tv_image"
                android:text="结束"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/endtime"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:focusable="false"/>
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/grey_300"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_tv_image"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/select_order_detail"/>

            <TextView
                android:id="@+id/detail_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/detail_tv_image"
                android:text="详细"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/detail"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:focusable="false"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>