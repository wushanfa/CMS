<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_batch_executed_sure"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_execute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:typeface="serif"
        android:textColor="@color/black_text_title"
        android:text=""/>

    <TextView
        android:layout_below="@+id/tv_execute"
        android:id="@+id/tv_execute_num"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black_text_content"
        android:text="执行"/>

    <LinearLayout
        android:layout_below="@+id/tv_execute_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black_text_content"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="继续"/>

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="60dp"
            android:textSize="@dimen/text_size"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:textColor="@color/black_text_content"
            android:text="暂停"/>

        <Button
            android:id="@+id/btn_end"
            android:layout_width="60dp"
            android:textSize="@dimen/text_size"
            android:layout_height="32dp"
            android:background="@null"
            android:textColor="@color/black_text_content"
            android:layout_marginRight="30dp"
            android:text="结束"/>
    </LinearLayout>

</RelativeLayout>
