                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_exercise_orthopedics2"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_yd2"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_qt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其       他:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_custom_orthopedics2"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/tv_qt2"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skin_line_gray_sround" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_ll_gushangkeqingkuang2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/detail_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="点击折叠详细内容"
