<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_fra_icu_gskqk"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <!-- ScrollView只需一个子类布局 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@color/blue_normal"
                android:gravity="center"
                android:text="骨 伤 科 情 况 (1)"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/gushangkeqingkuang"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_skfl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="伤口敷料:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_dressing"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_skfl1"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_gj1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="感        觉:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_feel"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_gj1"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_dmbd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="动脉搏动:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_artery"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_dmbd"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_msxx1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="末梢血循:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_peripheral"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_msxx1"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_yd1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="运       动:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spn_exercise_orthopedics"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_yd1"
                        android:background="@drawable/bg_spinner_other"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_qt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其       他:"
                        android:textColor="@color/threetesttext"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_custom_orthopedics1"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/tv_qt1"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skin_line_gray_sround" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_ll_gushangkeqingkuang"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="点击折叠详细内容"
                    android:textColor="@color/grey_800"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/up" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@color/blue_normal"
                android:gravity="center"
                android:text="骨 伤 科 情 况 (2)"
