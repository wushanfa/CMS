<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/top_right_bottom_left_padding"
    android:layout_marginTop="@dimen/top_right_bottom_left_padding"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_start_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:gravity="left"
            android:text="05-03 08:45"
            android:textColor="@color/grey_text_content"
            android:textSize="@dimen/text_size_small" />
        <TextView
            android:id="@+id/v_line3"
            android:layout_width="12dp"
            android:layout_height="41dp"
            android:layout_below="@+id/rl_start_time"
            android:background="@drawable/big_sight" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_pj"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_right_bottom_left_padding"
        android:layout_toRightOf="@+id/ll_time"
        android:text="膝部疼痛缓解"
        android:textColor="@color/grey_text_content"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_nurser_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/top_right_bottom_left_padding"
        android:text="武文娟"
        android:textColor="@color/grey_text_content"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>