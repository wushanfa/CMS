<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/root_fra_patient"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal"
              android:padding="5dp">


    <ListView
        android:id="@+id/lv_progress"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/gray_dark"
        android:dividerHeight="1px"
        android:listSelector="@color/transparent"
        android:scrollbars="none">
    </ListView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:background="@drawable/frame_black"
        android:fillViewport="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_axis"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/select_choosen_process_btn_white_grey"
                android:gravity="center"
                android:textColor="@color/text_normal"
                android:textSize="30sp"/>

            <ListView
                android:id="@+id/lv_time_axis"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@color/gray_dark"
                android:dividerHeight="1px"
                android:listSelector="@color/transparent"
                android:scrollbars="none">
            </ListView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>