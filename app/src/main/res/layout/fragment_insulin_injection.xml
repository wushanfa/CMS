<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_fra_injection"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_body"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/insulin_place_q"/>

    <TextView
        android:id="@+id/tv_leftArm"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/iv_body"
        android:layout_marginRight="13dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_rightArm"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/iv_body"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_rightTopBelly"

        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/iv_body"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_leftTopBelly"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/iv_body"
        android:layout_marginRight="83dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_rightBottomBelly"

        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/iv_body"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_leftBottomBelly"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/iv_body"
        android:layout_marginRight="83dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_rightLeg"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/iv_body"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_leftLeg"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/iv_body"
        android:layout_marginRight="80dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/can_injection"/>

    <TextView
        android:id="@+id/tv_rightButtock"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_body"
        android:layout_marginRight="48dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/can_injection"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_leftButtock"
        style="@style/InsulinSiteTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_rightButtock"
        android:layout_toLeftOf="@+id/tv_rightButtock"
        android:background="@drawable/can_injection"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btn_reload"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/shuxin"
        android:gravity="center"
        android:padding="10dp"/>

</RelativeLayout>